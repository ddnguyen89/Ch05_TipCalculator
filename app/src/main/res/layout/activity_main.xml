<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="nguyen.tipcalculator.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/billLabel"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/bill_label"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/billET"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/percentLabel"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/percent_label"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/percentTV"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="@string/percent_tv"
            android:textSize="20sp" />

        <Button
            android:id="@+id/incrementButton"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:text="@string/increment_button" />

        <Button
            android:id="@+id/decrementButton"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:text="@string/decrement_button" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tipPercentLabel"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/tip_percent_label"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tipPercentTV"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="@string/tip_percent_tv"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/totalLabel"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/total_label"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/totalTV"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="@string/total_tv"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/roundingLabel"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/rounding_label"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <RadioGroup
                android:id="@+id/roundingRadioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/noneRadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/none_radio_button" />

                <RadioButton
                    android:id="@+id/tipRadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tip_radio_button" />

                <RadioButton
                    android:id="@+id/totalRadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/total_radio_button" />
            </RadioGroup>
        </LinearLayout>

        <View
            android:layout_width="50dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/splitLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/split_label"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <Spinner
                android:id="@+id/splitSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/perPersonLabel"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/per_person_label"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/perPersonTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/per_person_tv"
            android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/resetButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reset_button"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
